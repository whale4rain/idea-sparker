{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Inspiration Blog Writer",
  "version": "0.1.0",
  "identifier": "com.inspiration-blog-writer.app",
  "build": {
    "beforeBuildCommand": "npm run build:frontend",
    "beforeDevCommand": "npm run dev:frontend",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Inspiration Blog Writer",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "theme": "system"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "copyright": "",
    "deb": {
      "depends": []
    },
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "identifier": "com.inspiration-blog-writer.app",
    "longDescription": "A powerful desktop application for writing inspiration-based blog posts with AI assistance.",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": [],
    "shortDescription": "AI-powered blog writing assistant",
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "dialog": {
      "all": true,
      "open": true,
      "save": true
    },
    "fs": {
      "all": true,
      "readFile": true,
      "writeFile": true,
      "exists": true
    },
    "shell": {
      "all": true,
      "open": true
    },
    "notification": {
      "all": true
    },
    "window": {
      "all": true,
      "minimize": true,
      "maximize": true,
      "close": true,
      "setTitle": true
    }
  }
}
